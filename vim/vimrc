execute 'source' '~/dotfiles/vim/rc/options.rc.vim'
execute 'source' '~/dotfiles/vim/rc/mappings.rc.vim'
execute 'source' '~/dotfiles/vim/rc/filetype.rc.vim'

"---------------------------------------------------------------------------
" localSettings:
"
if has('nvim')
    execute 'source' '~/dotfiles/vim/rc/neovim.rc.vim'
endif

if has('mac')
    execute 'source' '~/dotfiles/vim/rc/macosx.rc.vim'
endif

execute 'source' '~/dotfiles/vim/rc/local.rc.vim'
