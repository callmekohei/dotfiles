if &compatible
  set nocompatible
endif

" encoding
set encoding=utf-8
set fileencoding=utf-8
set fileencodings=ucs-boms,utf-8,euc-jp,cp932
set fileformats=unix,dos,mac
if !has('gui_running') && &encoding != 'utf-8'
  set termencoding=utf-8
endif

"vimrc's scriptencoding
scriptencoding utf-8

" create autocmd group
augroup vimrc
  autocmd!
augroup END

" Use English interface.
language message C

execute 'source' '~/dotfiles/vim/rc/plugin.vim'
execute 'source' '~/dotfiles/vim/rc/option.vim'
execute 'source' '~/dotfiles/vim/rc/mapping.vim'
execute 'source' '~/dotfiles/vim/rc/filetype.vim'

if has('nvim')
  execute 'source' '~/dotfiles/vim/rc/neovim.vim'
endif

if has('mac')
  execute 'source' '~/dotfiles/vim/rc/macosx.vim'
endif

if !filereadable( '~/dotfiles/vim/rc/local.vim' )
  execute 'source' '~/dotfiles/vim/rc/local.vim'
endif
