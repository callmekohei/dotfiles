"   callmekohei's gvimrc

" gui-prepare {{{1

  scriptencoding utf-8

" }}}1 -------------------------------------------------
" gui-colorscheme {{{1

  if !exists('g:colors_name')
    colorscheme default
  endif

" }}}1 -------------------------------------------------
" gui-font {{{1

  let s:fontname = 'Droid Sans Mono for Powerline Nerd Font Complete'
  let &guifont   = s:fontname.":h14"
  let &linespace = 3

" }}}1 -------------------------------------------------
" gui-appearance {{{1

  " (toolbar settings) see ---> $MYVIMRC:75

  let &columns   = 80 " width
  let &lines     = 30 " hight
  let &cmdheight = 2

  " Don't flick cursor.
  set guicursor&
  set guicursor+=a:blinkon0

" }}}1 -------------------------------------------------
" gui-keymaps {{{1

  noremap  ; :
  noremap  : ;
  lnoremap ; :
  lnoremap : ;
  tnoremap ; :
  tnoremap : ;

" }}}1 -------------------------------------------------
" __END__  "{{{1

  " must be written at the last. see :help 'secure'
  let &g:secure = 1

  " vim: expandtab softtabstop=2 shiftwidth=2
  " vim: foldmethod=marker
  " vim: foldcolumn=5
