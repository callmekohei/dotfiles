scriptencoding utf-8

" Color
if !exists('g:colors_name')
  colorscheme default
endif

" Font
let s:fontname = 'Droid Sans Mono for Powerline Nerd Font Complete'
let &guifont = s:fontname.":h14"
set linespace=3

" Window
set columns=80 " width
set lines=30   " hight
set cmdheight=2

" Appearance
" Hide toolbar.
set guioptions-=Tt
" Hide menus.
set guioptions-=m
" Not guitablabel.
set guioptions-=e
" Scrollbar is always off.
set guioptions-=rRlLb
" Confirm without window.
set guioptions+=c
" Don't flick cursor.
set guicursor&
set guicursor+=a:blinkon0

" keymap ( see also: h: map.txt >> map-overview map-modes )
" Normal, Visual, Select, Operator-pending
noremap  ; :
noremap  : ;
" Insert, Command-line, Lang-Arg
lnoremap ; :
lnoremap : ;
" Terminal-Job
tnoremap ; :
tnoremap : ;
