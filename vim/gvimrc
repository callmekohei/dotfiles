scriptencoding utf-8

"---------------------------------------------------------------------------
" Color
"
" Don't override colorscheme.
if !exists('g:colors_name')
  colorscheme default
endif

"---------------------------------------------------------------------------
" Font
"
let s:fontname = 'Droid Sans Mono for Powerline Nerd Font Complete'
let &guifont = s:fontname.":h14"
set linespace=3

"---------------------------------------------------------------------------
" Window
"
set columns=80 " width
set lines=30   " hight
set cmdheight=2

"---------------------------------------------------------------------------
" Appearance
"
" Hide toolbar.
set guioptions-=Tt
" Hide menus.
set guioptions-=m
" Not guitablabel.
set guioptions-=e
" Confirm without window.
set guioptions+=c
" Don't flick cursor.
set guicursor&
set guicursor+=a:blinkon0
" Scrollbar is always off.
set guioptions-=r
set guioptions-=R
set guioptions-=l
set guioptions-=L
set guioptions-=b

"---------------------------------------------------------------------------
" keymap:
"
" exchange colon and semi-colon
nnoremap ; :
nnoremap : ;
inoremap ; :
inoremap : ;
vnoremap ; :
vnoremap : ;
cnoremap ; :
cnoremap : ;
