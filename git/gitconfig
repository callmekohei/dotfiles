### callmekohei's gitconfig
### vim: filetype=sh

[user]
  name  = callmekohei
  email = callmekohei@gmail.com
[credential]
  helper = osxkeychain
[core]
  quotepath  = false
  autocrlf   = false
  ignorecase = false
  editor     = vim
[push]
  default = current
[diff]
  tool = vimdiff
[color]
  ui = true

[alias]
  d  = diff
  ds = diff --staged
  snapshot = !git stash save "snapshot: $(date)" && git stash apply "stash@{0}"
  snapshots = !git stash list --grep snapshot

